<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_report_export_pdf" model="ir.actions.report">
        <field name="name">Export</field>
        <field name="model">ir.exports</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">export_view_pdf.export_pdf_template</field>
    </record>
    <!-- Export PDF Template -->
    <template id="export_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-bordered">
                        <thead>
                            <t t-foreach="length" t-as="length">
                                <th>
                                    <t t-esc="record['header'][length]"/>
                                </th>
                            </t>
                        </thead>
                        <t t-foreach="data_len" t-as="rec">
                            <tr>
                                <t t-foreach="length+1" t-as="ln">
                                    <td>
                                        <t t-esc="record['data'][rec][ln]"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>