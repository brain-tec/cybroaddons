<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Deliver to information in purchase order report -->
    <template id="report_purchase_order_document_inherit"
              inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table[hasclass('o_main_table')]//th[@name='th_description']"
               position="after">
            <th name="th_deliver_to">
                <strong>Deliver To</strong>
            </th>
        </xpath>
        <xpath expr="//tbody//td[@id='product']"
               position="after">
            <td class="text-center">
                <span t-esc="line.picking_name"/>
            </td>
        </xpath>
    </template>
</odoo>
