<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="add_testimonial_form" model="ir.ui.view">
<!--Testimonial adding form view-->
        <field name="name">add.testimonial.view.form</field>
        <field name="model">website.testimonial</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <group>
                    <group>
                        <field name="user_id"  options="{'no_create' : True}"/>
                        <field name="testimonial"/>
                    </group>
                    <group>
                        <field name="image" string="" class="oe_avatar" widget="image"/>
                    </group>
                </group>
            </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="add_testimonial_view_tree" model="ir.ui.view">
        <!--Testimonial adding tree view-->
        <field name="name">add.testimonial.view.tree</field>
        <field name="model">website.testimonial</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="testimonial"/>
            </list>
        </field>
    </record>

    <record id="add_testimonial_action" model="ir.actions.act_window">
        <field name="name">Add Testimonial</field>
        <field name="res_model">website.testimonial</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
            id="add_testimonial_menu"
            parent="website.menu_content"
            name="Testimonial"
            action="add_testimonial_action"/>
</odoo>