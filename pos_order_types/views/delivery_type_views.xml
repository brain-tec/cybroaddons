<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define a tree view for displaying delivery types -->
    <record id="delivery_type_tree_view" model="ir.ui.view">
        <field name="name">delivery.type.view.tree</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <tree string="Order Type" editable="bottom" create="true">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- Define an action to open the delivery type tree view -->
    <record id="action_delivery_type_view" model="ir.actions.act_window">
        <field name="name">Order Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">delivery.type</field>
        <field name="view_id" ref="delivery_type_tree_view"/>
        <field name="view_mode">tree</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new record.
            </p>
        </field>
    </record>
    <!-- Define a menu item to access the order type action -->
    <menuitem id="delivery_type_menu" name="Order Types"
              action="action_delivery_type_view"
              parent="point_of_sale.menu_point_config_product"/>
</odoo>