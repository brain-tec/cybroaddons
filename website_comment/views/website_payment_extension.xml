<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_sale_customer_comment" inherit_id="website_sale.cart_summary" customize_show="True" name="Customer comments" priority="31">
        <xpath expr="//div[@class='card']" position="after">
               <br/> <div t-attf-class="form-group col-lg-20">
                    <label class="control-label" for="comment">Comments</label>
                    <textarea rows="4" id="comment" class="form-control" placeholder="Write any customized notes you want here !"></textarea>
                </div>
        </xpath>
    </template>
</odoo>
