<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="FieldAutoFill">
        <!-- FieldAutoFill template to add input field to the widget-->
        <div class="o_auto_fill_container">
            <t t-if="widget.mode !== 'readonly'">
                <t t-if="widget.formatType === 'char'">
                    <div class="o_input_container">
                        <input type="text" id="input_field_auto_fill"
                               class="o_input input_field_auto_fill"/>
                    </div>
                </t>
                <t t-if="widget.formatType === 'text'">
                    <div class="o_input_container">
                        <textarea type="text" id="input_field_auto_fill"
                                  class="o_input text_field_auto_fill"/>
                    </div>
                </t>
            </t>
            <span t-if="widget.mode === 'readonly'"/>
            <div t-if="widget.mode !== 'readonly'" class="auto-fill-scrollbar"
                 id="auto_fill_list_scroll" style="max-height: 200px;">
                <table id="list_matches" class="list_matches table-sm"/>
            </div>
        </div>
    </t>
</templates>