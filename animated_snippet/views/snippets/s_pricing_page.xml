<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_pricing_page" name="Pricing Page">
        <section class="pricing-tables text-center">
            <div class="s_container">
                <h2 class="section__title">Pricing</h2>
                <div class="switch">
                    <span class="monthly">Monthly</span>
                    <div class="custom-switch" id="undefined">
                        <input type="checkbox" class="custom-switch"
                               id="custom-switch-5"/>
                        <label for="custom-switch-5"></label>
                    </div>
                    <span class="annually">Annually
                        <span class="save">*(Save 15%)</span>
                    </span>
                </div>
                <div class="plans grid-wrapper text-center">
                    <div class="plan plan--starter flex-wrapper">
                        <div class="plan__head">
                            <h3 class="plan__title caps lspg2">Starter</h3>
                            <div class="plan__price">
                                <span class="price price--monthly">£0
                                    <span class="plan__type">Monthly</span>
                                </span>
                                <span class="price price--annually">£0
                                    <span class="plan__type">Annually</span>
                                </span>
                            </div>
                        </div>
                        <div class="plan__features">
                            <p>
                                <span>5 Fonts</span>
                                <span>3 Projexts</span>
                                <span>2 Users</span>
                            </p>
                        </div>
                        <button class="plan__btn--start btn btn-default--outline btn-lg">
                            <span>Start</span>
                        </button>
                    </div>
                    <div class="plan flex-wrapper">
                        <div class="plan__head">
                            <h3 class="plan__title caps lspg2">Growing</h3>
                            <div class="plan__price">
                                <span class="price price--monthly">£5
                                    <span class="plan__type">Monthly</span>
                                </span>
                                <span class="price price--annually">£30
                                    <span class="plan__type">Annually</span>
                                </span>
                            </div>
                        </div>
                        <div class="plan__features">
                            <p>
                                <span>5 Fonts</span>
                                <span>3 Projexts</span>
                                <span>2 Users</span>
                            </p>
                        </div>
                        <button class="plan__btn--start btn btn-default--outline btn-lg">
                            <span>Start</span>
                        </button>
                    </div>
                    <div class="plan flex-wrapper">
                        <div class="plan__head">
                            <h3 class="plan__title caps lspg2">Enterprise</h3>
                            <div class="plan__price">
                                <span class="price price--monthly">£10
                                    <span class="plan__type">Monthly</span>
                                </span>
                                <span class="price price--annually">£50
                                    <span class="plan__type">Annually</span>
                                </span>
                            </div>
                        </div>
                        <div class="plan__features">
                            <p>
                                <span>5 Fonts</span>
                                <span>3 Projexts</span>
                                <span>2 Users</span>
                            </p>
                        </div>
                        <button class="plan__btn--start btn btn-default--outline btn-lg">
                            <span>Start</span>
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>