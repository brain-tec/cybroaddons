<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Add a website snippet-->
    <template id="external_snippets" inherit_id="website.snippets"
              priority="8">
        <xpath expr="//snippets[@id='snippet_content']//t[@t-snippet][last()]"
               position="after">
            <t t-snippet="website_product_search_snippet.search_snippet" string="Product search"
               t-thumbnail="/website_product_search_snippet/static/src/img/icon.png"/>
        </xpath>
    </template>
</odoo>
