<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Config Settings Inherited form view used to add Show Delivery Date in the form -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.delivery.date.ecommerce
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="sale_product_catalog_settings" position="inside">
                <setting help="Allows to Show Delivery Date in eCommerce">
                    <field name="is_delivery"/>
                </setting>
            </block>
        </field>
    </record>
</odoo>
