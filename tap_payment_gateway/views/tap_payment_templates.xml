<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <!-- Payment Gateway Inline Form Template -->
        <template id="inline_form" name="inline_form">
            <div t-attf-id="test-container-{{acquirer_id}}"
                 class="tap_payment">
                <div class="mt8">
                    <div class="form-group col-md-12">
                        <input type="tel" name="cc_number" id="cc_number"
                               class="cc_number form-control"
                               placeholder="xxxx xxxx xxxx xxxx" maxlength="16"
                               data-is-required="true"/>
                        <input type="hidden" name="cc_brand" value=""/>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" name="cc_expiry_month"
                               id="cc_expiry_month" class="form-control"
                               placeholder="MM" data-is-required="true"
                               maxlength="2"/>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" name="cc_expiry_year"
                               id="cc_expiry_year" class="form-control"
                               placeholder="YY" data-is-required="true"
                               maxlength="2"/>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="password" name="cc_cvv" id="cc_cvv"
                               class="form-control"
                               placeholder="CardCVV" data-is-required="true"
                               maxlength="3"/>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" name="cc_holder_name"
                               id="cc_holder_name" class="form-control"
                               placeholder="CardholderName"
                               data-is-required="true"/>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>
