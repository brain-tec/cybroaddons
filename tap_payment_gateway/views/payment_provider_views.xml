<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define the view for modifying payment provider credentials -->
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">payment.provider.form.inherit</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'tap')]}">
                    <field name="tap_secret_key"
                           string="Secret Key"
                           attrs="{'required': [('code', '=', 'tap'), ('state', '!=', 'disabled')]}"/>
                    <field name="tap_publishable_key" string="Published Key"
                           attrs="{'required': [('code', '=', 'tap'), ('state', '!=', 'disabled')]}"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
