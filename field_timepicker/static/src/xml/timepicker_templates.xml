<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="FieldTimePicker">
        <!-- FieldTimePicker template to add input field-->
        <div class="o_field_timepicker" t-attf-class="{{props.editMode ? 'o_edit_mode' : ''}}">
        <input type="text"
               t-ref="input_time"
               t-att-value="props.record.data[props.name]"
               t-on-click="_onClickTimeField"
               readonly="readonly"
               class="o_input"/>
    </div>
    </t>
</templates>
