<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<!-- Custom Message Alert Popup -->
    <t t-name="pos_custom_message.CustomMessageAlertPopup" owl="1">
        <div class="popup popup-textarea">
          <div class="modal-header" style="background-color:pink;display: flex; align-items: center; justify-content: center;">
              <h4 class="modal-title">
                  <b><i class='fa fa-bell'/>
                  <t t-esc="props.title"/></b></h4>
          </div>
            <div class="modal-body">
					  	<main class="body">
        					<t t-esc=" props.body"/>
        				</main>
			</div>
            <footer class="footer footer-flex modal-footer">
    <div class="button confirm highlight btn btn-lg btn-primary" style="margin-left: 415px;"
         t-on-click="cancel">
       <t t-esc="props.confirmText"/>
    </div>
</footer>
		</div>
	</t>

    <!-- Custom Message Info Popup -->
    <t t-name="pos_custom_message.CustomMessageInfoPopup" owl="1">
                <div class="popup popup-textarea">
          <div class="modal-header" style="background-color:bisque;display: flex; align-items: center; justify-content: center;">
              <h4 class="modal-title"><i class='fa fa-exclamation-circle'/>
                  <t t-esc="props.title"/></h4>
          </div>
                    <div class="modal-body">
					  	<main class="body">
        					<t t-esc=" props.body"/>
        				</main>
			</div>
                    <footer class="footer footer-flex modal-footer">
    <div class="button confirm highlight btn btn-lg btn-primary" style="margin-left: 415px;"
         t-on-click="cancel">
       <t t-esc="props.confirmText"/>
    </div>
</footer>
		</div>
	</t>

    <!-- Custom Message Warning Popup -->
    <t t-name="pos_custom_message.CustomMessageWarnPopup" owl="1">
        				        <div class="popup popup-textarea">
                  <div class="modal-header"
                       style="background-color:darksalmon;display: flex; align-items: center; justify-content: center;">
                      <h4 class="modal-title"><i class='fa fa-exclamation-triangle'/>
                          <t t-esc="props.title"/></h4>
                  </div>
                                    <div class="modal-body">
                                        <main class="body">
                                            <t t-esc=" props.body"/>
                                        </main>
        			</div>
                                    <footer class="footer footer-flex modal-footer">
                                        <div class="button confirm highlight btn btn-lg btn-primary" style="margin-left: 415px;"
                                             t-on-click="cancel">
                                            <t t-esc="props.confirmText"/>
                                        </div>
                                    </footer>
                                </div>
    </t>
</templates>
