<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Custom template to include the Main Product Section in Index -->
    <template id="index_product" inherit_id="website.snippets"
              name="Index_Product">
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_diva.diva_index_main_product1"
               t-thumbnail="/theme_diva/static/src/images/snippets/index-1/main_product.jpg"/>
        </xpath>
    </template>
    <!-- Custom template for the Main Product Section in Index -->
    <template id="diva_index_main_product1" name="Index Product">
        <section class="main_product1">
        </section>
    </template>
</odoo>
