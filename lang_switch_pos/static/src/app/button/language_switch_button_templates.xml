<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	 <!-- Template for the custom control button to create a product in the
	  Point of Sale -->
    <t t-name="point_of_sale.LanguageChange">
		<button class="control-button btn btn-light rounded-0 fw-bolder"
                t-on-click="() => this.onClick()">
			<i class="fa fa-language" role="img"
               aria-label="Language Change" title="Language Change"/>
            <span> </span>
            <span>Change Language</span>
		</button>
	</t>
</templates>
