<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	 <!-- Template for the custom control button to create a product in the
	  Point of Sale -->
    <t t-name="point_of_sale.ProductCreateButton">
		<button class="control-button btn btn-light rounded-0 fw-bolder"
                t-on-click="() => this.onClick()">
			<i class="fa fa-pencil-square" role="img"
               aria-label="Create Product" title="Create Product"/>
            <span> </span>
            <span>Create Product</span>
		</button>
	</t>
</templates>
