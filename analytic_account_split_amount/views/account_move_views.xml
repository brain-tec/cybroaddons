<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    created new widget for adding amount option for the field analytic_distribution-->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">
            account.move.view.form.inherit.analytic.account.split.amount
        </field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']"
                   position="replace">
                <field name="analytic_distribution"
                       widget="analytic_distribution_amount"
                       groups="analytic.group_analytic_accounting"
                       optional="show"
                       options="{'product_field': 'product_id', 'account_field': 'account_id', 'force_applicability': 'optional'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
