<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--    Inherited the payment_acquirer_form to Add fields in the form view-->
    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">payment.acquirer.view.form.inherit.payment.paytabs.odoo</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'paytabs')]}">
                    <field name="profile_id"
                           attrs="{'required':[ ('provider', '=', 'paytabs'), ('state', '!=', 'disabled')]}"/>
                    <field name="api_key"
                           attrs="{'required':[ ('provider', '=', 'paytabs'), ('state', '!=', 'disabled')]}"/>
                    <field name="domain"
                           attrs="{'required':[ ('provider', '=', 'paytabs'), ('state', '!=', 'disabled')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
